<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CriarServicoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="132dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imgServico1"
                    android:layout_width="300px"
                    android:layout_height="300px"
                    android:scaleType="centerCrop"
                    app:srcCompat="@android:drawable/ic_menu_add" />

                <ImageView
                    android:id="@+id/imgServico2"
                    android:layout_width="300px"
                    android:layout_height="300px"
                    android:layout_weight="1"
                    android:visibility="gone"
                    app:srcCompat="@drawable/blackberry_logo" />

                <ImageView
                    android:id="@+id/imgServico3"
                    android:layout_width="300px"
                    android:layout_height="300px"
                    android:layout_weight="1"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_launcher" />

                <ImageView
                    android:id="@+id/imgServico4"
                    android:layout_width="300px"
                    android:layout_height="300px"
                    android:layout_weight="1"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_menu_camera" />

                <ImageView
                    android:id="@+id/imgServico5"
                    android:layout_width="300px"
                    android:layout_height="300px"
                    android:layout_weight="1"
                    android:visibility="gone"
                    app:srcCompat="@drawable/android_logo" />
            </LinearLayout>
        </HorizontalScrollView>

        <EditText
            android:id="@+id/txTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Título *"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Descrição *"
            android:inputType="textMultiLine" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>